{% include 'header.html.twig' %}

<div class="breadcrumbs">
    <a href="/">Home</a> &nbsp;&#47;&nbsp; 
</div>

<div class="container">
    <div class="content-wrapper">
        <div class="featured-content">
            {% if featuredPost %}
                <div class="featured-item" data-post-id="{{ featuredPost.id }}">
                    <div class="featured-banner">
                        <img src="{{ featuredPost.banner }}" alt="{{ featuredPost.name }} Thumbnail">
                    </div>
                    <div class="featured-info">
                        <h2 class="featured-title">{{ featuredPost.name }}</h2>
                        <p class="featured-category">{{ featuredPost.category.name }} â€¢ {{ featuredPost.crdate|date('F j, Y') }}</p>
                        <div class="featured-excerpt">
                            {% set content = featuredPost.longText|striptags|raw %}
                            {{ content|slice(0, 300) }}{% if content|length > 300 %}...{% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <p>No featured post available.</p>
            {% endif %}
        </div>

        <div class="sidebar">
            {% if latestPosts|length > 0 %}
                {% for post in latestPosts %}
                    <div class="sidebar-item" data-post-id="{{ post.id }}">
                        <div class="sidebar-image">
                            <img src="{{ post.banner }}" alt="{{ post.name }} Thumbnail">
                        </div>
                        <div class="sidebar-info">
                            <h3 class="sidebar-title two-line">{{ post.name }}</h3>
                            <p class="sidebar-excerpt one-line">
                                {% set parts = post.longText|split('&nbsp;') %}
                                {% set firstPart = parts[0]|striptags|raw %}
                                {{ firstPart }}
                            </p>
                            <p class="sidebar-category">{{ post.category.name }}</p>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>No posts available.</p>
            {% endif %}
        </div>
    </div>
</div>

{% include 'footer.html.twig' %}

<style>
/* Updated styles for homepage layout */
.container {
    display: flex;
    justify-content: center;
    padding-top: 20px;
    padding-bottom: 20px;
    padding-left: 0px;
    padding-right: 0px;
    max-width: 100%;
    margin: 0 auto;
}

.content-wrapper {
    display: flex;
    width: 100%;
    gap: 10px;
    max-width: 100%;
    align-items: stretch; /* Ensures both columns align vertically */
}

/* Featured content styles - wider to match breadcrumbs */
.featured-content {
    flex: 3;
    max-width: 75%;
    display: flex;
    flex-direction: column; /* Stack children vertically */
}

.featured-item {
    background-color: #fff;
    border-radius: 15px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
    overflow: hidden;
    transition: transform 0.3s ease-in-out, border 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
    display: flex;
    flex-direction: column;
    flex-grow: 1; /* Ensures the featured post fills the available height */
}

.featured-item:hover {
    background-image: linear-gradient(to right, transparent, #e8a1c08b);
    border: 2px solid #ee619e;
    color: rgb(232, 16, 131);
    transform: translateY(-5px);
}

/* Featured banner */
.featured-banner {
    width: 100%;
    height: 400px; /* Increased height to show more of the thumbnail */
    overflow: hidden;
}

.featured-banner img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures the image covers the container without distortion */
}

.featured-info {
    padding: 20px;
}

.featured-title {
    margin: 0 0 10px 0;
    font-size: 1.8rem;
    color: #333;
}

.featured-excerpt {
    margin: 15px 0;
    color: #555;
    line-height: 1.6;
    font-size: 1rem;
    text-align: justify;
}

.featured-category {
    font-size: 0.9rem;
    color: #888;
    margin: 0;
}

/* Sidebar styles - narrower to accommodate wider featured content */
.sidebar {
    flex: 1;
    max-width: 25%;
    background-color: #f4f4f400;
    padding: 0;
    display: flex;
    flex-direction: column; /* Stack children vertically */
}

.sidebar h2 {
    margin-bottom: 15px;
    color: #fff;
}

.sidebar-item {
    display: flex;
    background-color: #fff;
    margin-bottom: 15px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
    padding: 10px;
    border-radius: 15px;
    cursor: pointer;
    border: 2px solid transparent;
    transition: transform 0.3s ease-in-out, border 0.3s ease;
    overflow: hidden;
    flex-shrink: 0; /* Prevents sidebar items from stretching */
}

.sidebar-item:hover {
    background-image: linear-gradient(to right, transparent, #e8a1c08b);
    border: 2px solid #ee619e;
    color: rgb(232, 16, 131);
    transform: translateY(-3px);
}

.sidebar-image {
    width: 80px;
    height: 80px;
    margin-right: 10px;
    overflow: hidden;
    border-radius: 8px;
}

.sidebar-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.sidebar-info {
    flex: 1;
}

.sidebar-title {
    margin: 0 0 5px 0;
    font-size: 1rem;
}

.sidebar-excerpt {
    font-size: 0.85rem;
    color: #666;
    margin-bottom: 5px;
}

.sidebar-category {
    font-size: 0.8rem;
    color: #888;
}

/* Breadcrumbs and width alignment */
.breadcrumbs, .content-wrapper {
    width: 90%;
    margin-left: auto;
    margin-right: auto;
}

/* Responsive adjustments */
@media (max-width: 992px) {
    .featured-content {
        max-width: 70%;
    }
    
    .sidebar {
        max-width: 30%;
    }
}

@media (max-width: 768px) {
    .content-wrapper {
        flex-direction: column;
    }
    
    .featured-content, .sidebar {
        max-width: 100%;
    }
    
    .featured-banner {
        height: 200px;
    }
    
    .featured-info {
        padding: 15px;
    }
    
    .featured-title {
        font-size: 1.5rem;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle click events for featured item
    const featuredItem = document.querySelector('.featured-item');
    if (featuredItem) {
        featuredItem.addEventListener('click', function() {
            const postId = this.getAttribute('data-post-id');
            window.location.href = '/post/' + postId;
        });
    }
    
    // Handle click events for sidebar items
    const sidebarItems = document.querySelectorAll('.sidebar-item');
    sidebarItems.forEach(item => {
        item.addEventListener('click', function() {
            const postId = this.getAttribute('data-post-id');
            window.location.href = '/post/' + postId;
        });
    });
});
</script>